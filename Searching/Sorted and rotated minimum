class Solution {
    public int findMin(int[] arr) {
        // complete the function here
        /*for(int i=1;i<=arr.length;i++){
            if(arr[i-1]>arr[i] && arr[i]<arr[i+1]){
                return arr[i];
            }
        }
        return 0;*/
        int min = Integer.MAX_VALUE;
        for(int i=0;i<arr.length;i++){
            min = Math.min(arr[i],min);
        }
        return min;
    }
}
